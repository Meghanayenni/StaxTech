<body>
    <h1>‚úä‚úã‚úåÔ∏è Rock-Paper-Scissors</h1>
    <div class="game-card">
    
    <div class="choices">
      <button class="choice-btn" onclick="play('rock')">ü™®</button>
      <button class="choice-btn" onclick="play('paper')">üìÉ</button>
      <button class="choice-btn" onclick="play('scissors')">‚úÇÔ∏è</button>
    </div>
    <div class="result" id="result">Are u Ready? Let's Gooooo! üòú</div>
    <div class="scoreboard" id="score">You:0 | Bot: 0</div>
    <button class="restart" onclick="restart()">Reset Game</button>
  </div>

  <script>
        let userScore = 0;
    let botScore = 0;

    function play(userChoice) {
      const choices = ['rock', 'paper', 'scissors'];
      const botChoice = choices[Math.floor(Math.random() * choices.length)];
      const resultBox = document.getElementById('result');

      let result = "";

      if (userChoice === botChoice) {
        result = `ü§ù It's a draw! You both chose ${userChoice}.`;
      } else if (
        (userChoice === 'rock' && botChoice === 'scissors') ||
        (userChoice === 'paper' && botChoice === 'rock') ||
        (userChoice === 'scissors' && botChoice === 'paper')
      ) {
        userScore++;
        result = `üéâ You win! ${userChoice} beats ${botChoice}.`;
      } else {
        botScore++;
        result = `üò¢ You lose! ${botChoice} beats ${userChoice}.`;
      }

      resultBox.classList.remove('animate');
      void resultBox.offsetWidth;
      resultBox.textContent = result;
      resultBox.classList.add('animate');

      document.getElementById('score').textContent = `You: ${userScore} | Bot: ${botScore}`;
    }

    function restart() {
      userScore = 0;
      botScore = 0;
      const resultBox = document.getElementById('result');
      resultBox.textContent = 'Are u Ready? Let\'s Gooooo! üòú';
      resultBox.classList.remove('animate');
      document.getElementById('score').textContent = 'You:0 | Bot: 0';
    }
  
  </script>
  
